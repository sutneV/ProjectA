<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomBottomNavigationText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/tw_cen_mt</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item> <!-- Adjust the text size -->
        <item name="android:fontFamily">@font/tw_cen_mt</item> <!-- Optional custom font -->
    </style>

    <style name="CircularImageView">
        <item name="shapeAppearanceOverlay">@style/CircularShape</item>
    </style>

    <style name="CircularShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- This makes the image circular -->
    </style>

    <style name="ExpandedAppBar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CollapsedAppBar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CustomToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:fontFamily">@font/tw_cen_mt</item> <!-- Set font family here -->
        <item name="android:gravity">center_vertical</item> <!-- Set text size here -->
    </style>

    <style name="Theme.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#FAF1E6</item>
    </style>

</resources>