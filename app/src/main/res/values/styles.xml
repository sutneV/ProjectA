<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomBottomNavigationText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/tw_cen_mt</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item> <!-- Adjust the text size -->
        <item name="android:fontFamily">@font/tw_cen_mt</item> <!-- Optional custom font -->
    </style>

    <style name="CircularImageView">
        <item name="shapeAppearanceOverlay">@style/CircularShape</item>
    </style>

    <style name="CircularShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- This makes the image circular -->
    </style>
</resources>