<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Outer layer: Border -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF"/> <!-- Optional background color -->
                <corners android:radius="12dp"/> <!-- Rounded corners -->
                <stroke android:width="2dp" android:color="#DDDDDD"/> <!-- Border color -->
            </shape>
        </item>

        <!-- Inner layer: Content background -->
        <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF"/> <!-- Inner content color -->
                <corners android:radius="10dp"/>
            </shape>
        </item>
    </layer-list>

</selector>