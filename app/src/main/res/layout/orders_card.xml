<!-- res/layout/item_order.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="3dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    android:background="@drawable/card_border_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/order_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID"
            android:fontFamily="@font/tw_cen_mt"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/restaurant_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Name"
            android:fontFamily="@font/tw_cen_mt"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/reservation_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation Time"
            android:fontFamily="@font/tw_cen_mt"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:fontFamily="@font/tw_cen_mt"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
